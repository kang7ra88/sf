<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @fish.title %>
</p>

<p>
  <b>Body:</b>
  <%= @fish.body %>
</p>

<p>
  <b>Category:</b>
  <%= @fish.category %>
</p>

<p>
  <b>Status:</b>
  <%= @fish.status %>
</p>

<div data-role="controlgroup" data-type="horizontal">
	<% if user_signed_in? && @fish.user_id == current_user.id %>
	<%= link_to 'Edit', edit_fish_path(@fish), "data-role" => "button", "data-icon" => "grid" %> 
	<%= link_to 'Delete', @fish, confirm: 'Are you sure?', method: :delete, "data-role" => "button", "data-icon" => "delete" %> 
	<% else %>
	<% end %>
	<%= link_to 'Back', fish_index_path, "data-role" => "button", "data-icon" => "back" %>
</div>